{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "target": "ES2018",
    "lib": ["DOM", "ES2019"],
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
