{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "lib": ["DOM", "ES2019"],
    "sourceMap": true,
    "outDir": "build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
