{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/scripts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
